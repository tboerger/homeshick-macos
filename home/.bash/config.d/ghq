function p() {
  if [ $# -ne 1 ]; then
    echo "Usage: p <project>"
    return 1
  fi

  local repos=($(command ghq list -p "$1"))

  case ${#repos[@]} in
    0)
      echo "project not found"
      return 2
      ;;
    1)
      cd "${repos[0]}"
      return 0
      ;;
    *)
      local PS3="Select repo: "
      select reponame in ${repos[@]}; do
        cd "${reponame}"
        return 0
      done
      ;;
  esac
}
