function clearsd() {
	if [ $# -ne 1 ]; then
		echo "Usage: clearsd <volume>"
		return 1
	fi

	VOL=/Volumes/$(echo $1 | tr '[:lower:]' '[:upper:]')

	if [ -d $VOL ]; then
		echo "Cleaning ${VOL}"

		pushd $VOL > /dev/null
		sudo rm -rf \$RFS_LOG.LO\$ .Spotlight-V100 .Trashes .fseventsd
		popd > /dev/null
	fi
}
